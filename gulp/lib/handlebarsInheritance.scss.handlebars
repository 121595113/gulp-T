{
  // Default options
  'functions': false,
  'variableNameTransforms': ['dasherize']
}

{{#extend "scss"}}
{{#content "sprites"}}
{{#each sprites}}
${{../options.dir_name}}-{{strings.name}}: ({{px.x}}, {{px.y}}, {{px.offset_x}}, {{px.offset_y}}, {{px.width}}, {{px.height}}, {{px.total_width}}, {{px.total_height}}, '{{{escaped_image}}}', '{{name}}', '{{../options.dir_name}}');
{{/each}}
{{/content}}
{{#content "spritesheet"}}
${{options.dir_name}}-sprites: ({{#each sprites}}${{../options.dir_name}}-{{strings.name}}, {{/each}});
{{/content}}
{{/extend}}